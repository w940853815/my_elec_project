[flake8]
ignore = C901, W503, F405,E501, F401
# imported but unused
# E501: line too long
# W503: line break before binary operator
# F405: may be undefined, or defined from star imports
exclude =
    *.pyc,
    .git,
    __pycache__,
    */node_modules/*,
    */templates_module*,
    */bin/*,
    packages/*
    .env/*
    node_modules/*
include =
    api/
max-line-length = 120
max-complexity = 12
format = pylint
show_source = True
statistics = True
count = True